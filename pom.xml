<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>site.morn.boot</groupId>
  <artifactId>morn-boot-projects</artifactId>
  <version>1.0.0.SNAPSHOT</version>
  <packaging>pom</packaging>

  <description>Morn Boot Projects - 基于Spring Boot的系列开发工具包</description>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>9</version>
  </parent>

  <modules>
    <module>morn-boot-core</module>
    <module>morn-boot-autoconfigure</module>
    <module>morn-boot-validator</module>
    <module>morn-boot-test</module>
    <module>morn-boot-web</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <java.version>1.8</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>

    <morn.version>1.0.0.SNAPSHOT</morn.version>
    <boot.version>1.5.15.RELEASE</boot.version>
    <lombok.version>1.16.22</lombok.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-web</artifactId>
        <version>${boot.version}</version>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-data-jpa</artifactId>
        <version>${boot.version}</version>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-data-rest</artifactId>
        <version>${boot.version}</version>
      </dependency>

      <dependency>
        <groupId>site.morn</groupId>
        <artifactId>morn-validator</artifactId>
        <version>${morn.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <profiles>
    <profile>
      <id>sonatype-nexus-snapshots</id>
      <properties>
        <morn.version>1.0.0.SNAPSHOT</morn.version>
      </properties>
    </profile>
    <profile>
      <id>sonatype-nexus-staging</id>
      <properties>
        <morn.version>1.0.0.RELEASE</morn.version>
      </properties>
    </profile>
  </profiles>

  <!--Sonar插件-->
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.sonarsource.scanner.maven</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <!--<version>3.5.0.1254</version>-->
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
